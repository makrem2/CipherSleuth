<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".Modifier_Annonce">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#D9D9D9"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="387dp"
        android:layout_height="695dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:background="#D9D9D9"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view15"
            android:layout_width="387dp"
            android:layout_height="4dp"
            android:layout_marginTop="550dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@color/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/edit_tel"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="500dp"
            android:ems="10"
            android:background="@drawable/add_layout"
            android:inputType="textPersonName" />

        <View
            android:id="@+id/view14"
            android:layout_width="387dp"
            android:layout_height="5dp"
            android:layout_marginTop="480dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@color/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt_Tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="510dp"
            android:text="Tél"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <EditText
            android:id="@+id/edit_ville"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/add_layout"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_Ville"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="430dp"
            android:text="Ville"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <View
            android:id="@+id/view13"
            android:layout_width="387dp"
            android:layout_height="6dp"
            android:layout_marginTop="410dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@color/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/edit_prix"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="360dp"
            android:ems="10"
            android:background="@drawable/add_layout"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_Prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="370dp"
            android:text="Prix"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <View
            android:id="@+id/view12"
            android:layout_width="387dp"
            android:layout_height="7dp"
            android:layout_marginTop="350dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@color/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/add_layout"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:text="Description"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <View
            android:id="@+id/view11"
            android:layout_width="387dp"
            android:layout_height="8dp"
            android:layout_marginTop="240dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@color/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt_Titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:text="Titre"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <View
            android:id="@+id/view10"
            android:layout_width="387dp"
            android:layout_height="9dp"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@color/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <View
            android:id="@+id/view"
            android:layout_width="387dp"
            android:layout_height="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@color/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt_categorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:text="Catégorie"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <Spinner
            android:id="@+id/sp_categorie"
            android:layout_width="240dp"
            android:background="@drawable/add_layout"
            android:layout_height="30dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="120dp" />

        <EditText
            android:id="@+id/edit_Titre"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/add_layout"
            android:layout_marginTop="190dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="PC S Vendre" />

        <Button
            android:id="@+id/main_login"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etpassword"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="580dp"
            android:layout_marginEnd="115dp"
            android:layout_marginRight="115dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/orange_btn"
            android:onClick="valid_modif_annonce"
            android:text="@string/va"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
</ScrollView>