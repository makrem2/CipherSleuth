<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".Fiche_Produite">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="615dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/all_corners_grey_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/editbnt"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="25dp"
                    android:onClick="btn_edit"
                    android:src="@drawable/edit" />

                <TextView
                    android:id="@+id/txt_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="450dp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/view16"
                    android:layout_width="390dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:background="@android:color/holo_red_light"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_still"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/TitleFicheProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="FICHE PRODUIT"
                    android:textColor="@color/orange"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />

                <TextView
                    android:id="@+id/btnFermer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="20dp"
                    android:onClick="btnreturn"
                    android:text="Fermer"
                    android:textColor="@color/orange"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />


                <ImageView
                    android:id="@+id/img_fiche_prod"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="85dp" />

                <TextView
                    android:id="@+id/txt_nom_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="270dp"
                    android:textColor="@color/noir"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />

                <TextView
                    android:id="@+id/txt_categorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="330dp"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />

                <TextView
                    android:id="@+id/num_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="390dp"
                    android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
                    android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/noir"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="440dp"
                    android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                    android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/noir"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />


                <TextView
                    android:id="@+id/txt_ville_vendeur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="490dp"
                    android:drawableLeft="@drawable/placemarker"
                    android:textColor="#FF5722"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />

                <TextView
                    android:id="@+id/txt_prix_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="490dp"
                    android:drawableEnd="@drawable/eurofiche"
                    android:drawableRight="@drawable/eurofiche"
                    android:drawablePadding="5dp"
                    android:textColor="#FF5722"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />

                <Button
                    android:id="@+id/btn_contacter_le_vendeur"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="550dp"
                    android:background="@drawable/orange_btn"
                    android:onClick="contacter_vendeur"
                    android:text="Contacter le vendeur"
                    android:textColor="@android:color/white" />


        </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
</ScrollView>