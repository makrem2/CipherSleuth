<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".Fiche_Produite">

    <android.support.v7.widget.CardView
        android:layout_width="389dp"
        android:layout_height="663dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/editbnt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="60dp"
            android:onClick="btn_edit"/>

        <View
            android:id="@+id/view16"
            android:layout_width="390dp"
            android:layout_height="2dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@android:color/holo_red_light"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_still"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/TitleFicheProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="FICHE PRODUIT"
            android:textColor="@color/orange"
            android:textSize="25sp"
            android:textStyle="italic|normal" />

        <TextView
            android:id="@+id/btnFermer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="50dp"
            android:onClick="btnreturn"
            android:text="Fermer"
            android:textColor="@color/orange"
            android:textSize="25sp"
            android:textStyle="italic|normal" />


        <ImageView
            android:id="@+id/img_fiche_prod"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp" />

        <TextView
            android:id="@+id/txt_nom_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="260dp"
            android:textSize="20sp"
            android:textStyle="italic|normal"  />

        <TextView
            android:id="@+id/txt_categorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="320dp"
            android:textSize="20sp"
            android:textStyle="italic|normal"  />

        <TextView
            android:id="@+id/num_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="380dp"
            android:textSize="20sp"
            android:textStyle="italic|normal" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="430dp"
            android:textSize="20sp"
            android:textStyle="italic|normal" />


        <TextView
            android:id="@+id/txt_ville_vendeur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="480dp"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:textStyle="italic|normal" />

        <TextView
            android:id="@+id/txt_prix_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="480dp"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:textStyle="italic|normal"  />

        <Button
            android:id="@+id/btn_contacter_le_vendeur"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="530dp"
            android:background="@drawable/orange_btn"
            android:text="Contacter le vendeur"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="345dp"
            android:layout_marginTop="485dp"
            android:background="@drawable/eurofiche"
            android:src="@drawable/euro" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="385dp"
            android:src="@drawable/phone_mini" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="435dp"
            android:background="@drawable/mail" />

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="485dp"
            android:background="@drawable/placemarker" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>