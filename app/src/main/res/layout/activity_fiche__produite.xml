<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".Fiche_Produite">

    <android.support.v7.widget.CardView
        android:layout_width="395dp"
        android:layout_height="663dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_fiche_prod"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/txt_fiche_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:text="BONJOUR"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <TextView
            android:id="@+id/txt_nom_vend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="350dp"
            android:text="CBgs sly"
            android:textSize="16sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/txt_num_tele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="400dp"
            android:text="24865721214"
            android:textSize="16sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/txt_email_vendeur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="450dp"
            android:text="cvqsdsq@yahoo.fr"
            android:textSize="16sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/txt_ville_vendeur"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="500dp"
            android:text="BEJA"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txt_prix_prod"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="500dp"
            android:text="200"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn_contacter_le_vendeur"
            android:layout_width="215dp"
            android:layout_height="71dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="550dp"
            android:background="@drawable/orange_btn"
            android:text="Contacter le vendeur"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>