<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Rel_boutique"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_nom_produit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
             />

        <TextView
            android:id="@+id/txt_nom_produit"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/img_nom_produit"
            android:textSize="20sp"
            android:textColor="@color/noir"
            android:textStyle="normal|italic"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="356dp" />


        <TextView
            android:id="@+id/txt_lieu_produit"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_nom_produit"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/img_nom_produit"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="217dp" />

    <TextView
        android:id="@+id/txt_prix_produit"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_lieu_produit"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/img_nom_produit"
        android:drawableEnd="@drawable/ic_euro_symbol_black_24dp"
        android:textColor="@color/noir"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="428dp"
        android:drawableRight="@drawable/ic_euro_symbol_black_24dp" />
    <TextView
        android:id="@+id/id"
        android:visibility="invisible"
        android:layout_width="200dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/id_user_b"
        android:visibility="invisible"
        android:layout_width="200dp"
        android:layout_height="30dp" />


    </RelativeLayout>

