<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:ignore="ContentDescription"
    tools:context=".Accueil">

    <ImageView
        android:id="@+id/img_still"
        android:layout_width="277dp"
        android:layout_height="138dp"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:srcCompat="@drawable/logo" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_still"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="334dp"
        android:layout_height="139dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lin_prod"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="mesprod"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="351dp">

            <ImageView
                android:id="@+id/img_prod"
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:onClick="mes_prod"
                app:srcCompat="@drawable/produit"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_prod"
                android:layout_width="86dp"
                android:layout_height="47dp"
                android:layout_weight="2"
                android:paddingTop="3dp"
                android:text="@string/pr"
                android:textAlignment="center"
                android:textColor="@color/noir"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lin_ajout_prod"
            android:layout_width="103dp"
            android:layout_height="135dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="ajout_prod"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="351dp">

            <ImageView
                android:id="@+id/img_ajout_prod"
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:layout_weight="2"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/ajoutproduit"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_ajout_prod"
                android:layout_width="94dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:onClick="ajou_prod"
                android:text="@string/ap"
                android:textAlignment="center"
                android:textColor="@color/noir"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lin_boutique"
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="getSav"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="351dp">

            <ImageView
                android:id="@+id/img_boutique"
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:layout_weight="2"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/botique"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_boutique"
                android:layout_width="86dp"
                android:layout_height="47dp"
                android:layout_weight="2"
                android:paddingTop="3dp"
                android:text="@string/bo"
                android:onClick="bou"
                android:textAlignment="center"
                android:textColor="@color/noir"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="388dp"
        android:layout_weight="0"
        android:background="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="223dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="472dp">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:src="@drawable/facebok" />

        <ImageView
            android:id="@+id/gmail"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:src="@drawable/email" />

        <ImageView
            android:id="@+id/twiter"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:src="@drawable/twiter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="227dp"
        android:layout_height="71dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="548dp">

        <TextView
            android:id="@+id/bas"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>